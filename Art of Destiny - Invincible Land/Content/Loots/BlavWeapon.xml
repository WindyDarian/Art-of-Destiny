<?xml version="1.0" encoding="utf-8" ?>
<XnaContent>
  <!-- 表示一种可以拾取的LOOT,由大地无敌-范若余在2009年10月4日加入 -->
  
  <Asset Type="AODGameLibrary.Units.LootSettings">
    <!--名字-->
    <Name>Blav重炮</Name>
    <!--可拾取物件类别-->
    <LootType>Weapon</LootType>
    <!--得到的武器或技能或任务物品的AssetName(含目录)-->
    <ObjectName>WeaponTypes\Blav</ObjectName>
    <IsWeapon>true</IsWeapon>
    <MinBulletNum>2</MinBulletNum>
    <MaxBulletNum>10</MaxBulletNum>
    <ModelName>AODModelTypes\Loot</ModelName>
    <ModelScale>2</ModelScale>
    <LootRadius>100</LootRadius>
  </Asset>
</XnaContent>
